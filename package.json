{
  "name": "lumina-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=lumina",
    "dev:lumina": "npm run dev --workspace=lumina",
    "dev:aurora": "npm run storybook --workspace=aurora",
    "storybook": "npm run storybook --workspace=aurora",
    "build:storybook": "npm run build-storybook --workspace=aurora",
    "build": "npm run build --workspaces",
    "build:lumina": "npm run build --workspace=lumina",
    "build:aurora": "npm run build --workspace=aurora"
  },
  "devDependencies": {
    "@types/node": "^22.14.0",
    "typescript": "~5.8.2"
  }
}
